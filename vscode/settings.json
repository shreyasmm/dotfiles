{
    "editor.fontSize": 18,
    "editor.fontFamily": "'Hack Regular', monospace, 'Droid Sans Fallback'",
    "window.zoomLevel": 1,
    "editor.fontLigatures": true,
    "workbench.colorTheme": "Ayu Dark Bordered",
    "workbench.iconTheme": "ayu",
    "workbench.statusBar.feedback.visible": false,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontFamily": "monospace, 'Droid Sans Fallback'",
    "editor.multiCursorModifier": "ctrlCmd",
    "yaml.customTags": [
        "!And",
        "!If",
        "!Not",
        "!Equals",
        "!Or",
        "!FindInMap sequence",
        "!Base64",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!Select",
        "!Split",
        "!Join sequence"
    ],
    // Enable/disable default YAML formatter (requires restart)
    "yaml.format.enable": true,
    "yaml.validate": false,
    "window.menuBarVisibility": "toggle",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.activityBar.visible": true,
    "workbench.editor.enablePreview": false,
    "workbench.editor.highlightModifiedTabs": true,
    "editor.tabSize": 2,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorWidth": 3,
    "terminal.integrated.enableBell": true,
    "terminal.integrated.rendererType": "dom",
    "breadcrumbs.enabled": false,
    "editor.renderWhitespace": "all",
    "aws.profile": "default",
    "editor.renderIndentGuides": false,
    "vs-kubernetes": {
        "vs-kubernetes.helm-path": "/home/shrey/.vs-kubernetes/tools/helm/linux-amd64/helm",
        "vs-kubernetes.minikube-path": "/home/shrey/.vs-kubernetes/tools/minikube/linux-amd64/minikube",
        "vs-kubernetes.knownKubeconfigs": [
            "/home/shrey/.kube/config"
        ],
        "vs-kubernetes.kubeconfig": "/home/shrey/.kube/config"
    },
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "diffEditor.renderSideBySide": false,
    // "workbench.sideBar.location": "right"
}
